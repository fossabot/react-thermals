{
  "name": "react-thermals",
  "description": "Simple and extensible way to manage shared state based on React hooks",
  "version": "4.0.0-beta.21",
  "main": "dist/index.js",
  "type": "module",
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kensnyder/react-thermals.git"
  },
  "author": "Ken Snyder <kendsnyder@gmail.com>",
  "license": "ISC",
  "keywords": [
    "store",
    "react",
    "hooks",
    "react hook",
    "react hooks",
    "state",
    "state management",
    "global state",
    "component state"
  ],
  "scripts": {
    "test": "vitest run",
    "test-watch": "vitest",
    "clean": "rimraf dist/ && touch dist/.gitkeep",
    "build": "npm run clean && npx -p typescript tsc --project tsconfig.build.json",
    "coverage": "vitest run --coverage",
    "view-coverage": "open ./coverage/lcov-report/index.html",
    "release": "build && release-it"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "devDependencies": {
    "@release-it/bumper": "4.0.2",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "13.4.0",
    "@types/jsdom": "20.0.1",
    "@types/react": "18.0.27",
    "@types/react-dom": "18.0.10",
    "@vitejs/plugin-react": "3.1.0",
    "@vitest/coverage-istanbul": "0.28.4",
    "happy-dom": "8.2.6",
    "jsdom": "21.1.0",
    "jsdom-global": "3.0.2",
    "prettier": "2.8.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "release-it": "15.6.0",
    "rimraf": "4.1.2",
    "type-fest": "3.5.5",
    "typescript": "4.9.5",
    "vitest": "0.28.4",
    "vitest-dom": "0.0.4"
  },
  "release-it": {
    "github": {
      "release": true,
      "web": true
    },
    "plugins": {
      "@release-it/bumper": {
        "out": "README.md"
      }
    }
  }
}
